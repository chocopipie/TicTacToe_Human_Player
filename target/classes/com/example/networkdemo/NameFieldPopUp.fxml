<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="100.0" prefWidth="280" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.networkdemo.NameFieldPopUpController">
    <!--            prefHeight="100.0" prefWidth="300.0" maxWidth="300" maxHeight="100"-->
    <padding>
        <Insets bottom="5" left="5" right="5" top="5" />
    </padding>
    <top>
        <Text fx:id="greeting" styleClass="greeting-text" text="Welcome to Tic Tac Toe!" textAlignment="CENTER" wrappingWidth="280" BorderPane.alignment="CENTER">
            <font>
                <Font size="18.0" />
            </font>
        </Text>
    </top>
    <center>
        <TextField fx:id="nameField" alignment="CENTER" text="Enter Name" BorderPane.alignment="CENTER" />
    </center>
    <bottom>
        <Button fx:id="submitButton" defaultButton="true" mnemonicParsing="false" onAction="#getNameField" text="Submit" BorderPane.alignment="CENTER">
            <opaqueInsets>
                <Insets />
            </opaqueInsets></Button>
    </bottom>

<!--    <stylesheets>-->
<!--        <URL value="popUp.css" />-->
<!--    </stylesheets>-->

</BorderPane>